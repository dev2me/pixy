<p id="notice"><%= notice %></p>

<h1>Imagenes compartidas</h1>

<% if Post.any? %>
  <% Post.all.each do |post| %>
    <div class = "well row">
      <h2><%= post.title %></h2>
      <%= image_tag post.image(:medium) %>
      <h3><%= image_tag post.user.avatar(:thumbnail)%><%= post.user.name %></h3>
    </div>
  <% end %>
<% else %>
  <h4>Nadie ha subido imagenes todavia... se el primero!</h4>
<% end %>

<%= link_to 'Subir nueva imagen', new_post_path %>
